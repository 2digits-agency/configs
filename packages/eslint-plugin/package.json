{
  "name": "@2digits/eslint-plugin",
  "description": "An eslint plugin that provides a set of rules to enforce best practices for 2digits projects",
  "version": "2.2.1",
  "type": "module",
  "repository": {
    "url": "https://github.com/2digits-agency/configs",
    "directory": "packages/eslint-plugin"
  },
  "license": "MIT",
  "public": true,
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.cts"
      }
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "types": "tsc --noEmit",
    "test": "vitest --run"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "2digits"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {
    "@typescript-eslint/utils": "8.0.0",
    "eslint": "^9.8.0",
    "magic-regexp": "^0.8.0",
    "ts-pattern": "^5.2.0"
  },
  "devDependencies": {
    "@2digits/tsconfig": "workspace:*",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-vitest-rule-tester": "^0.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
