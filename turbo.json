{
  "globalDependencies": ["pnpm-lock.yaml"],
  "globalPassThroughEnv": ["FORCE_COLOR", "COREPACK_HOME", "ENABLE_EXPERIMENTAL_COREPACK"],
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsdown.config.ts",
        "!test/**",
        "!tests/**",
        "!**/*.test.ts",
        "!**/*.spec.ts",
        "!vitest.config.ts"
      ],
      "outputs": ["dist/**"],
      "outputLogs": "new-only"
    },
    "types": {
      "dependsOn": ["^types", "build"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
      "outputs": ["tsconfig.tsbuildinfo"],
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.ts"],
      "outputLogs": "new-only"
    },
    "test:watch": {
      "persistent": true,
      "cache": false,
      "interactive": true
    },
    "dev": {
      "persistent": true
    },
    "//#lint:root": {
      "dependsOn": ["@2digits/eslint-config#build"],
      "inputs": [
        "eslint.config.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.mjs",
        "**/*.cjs",
        "**/*.json",
        "**/*.yaml",
        "**/*.yml",
        "**/*.md",
        "**/*.css",
        "!**/CHANGELOG.md",
        "!**/fixtures/**",
        "!openspec/**",
        "!.changeset/*-*-*.md",
        "!.claude/**",
        "!.cursor/**",
        "!.opencode/**",
        "!**/__snapshots__/**",
        "!**/dist/**",
        "!**/.turbo/**"
      ]
    },
    "//#lint:pkg": {
      "inputs": ["**/package.json"]
    },
    "//#lint:pkg:fix": {
      "cache": false
    },
    "//#format": {
      "dependsOn": ["@2digits/prettier-config#build"],
      "inputs": [
        ".prettierignore",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.mjs",
        "**/*.cjs",
        "**/*.json",
        "**/*.yaml",
        "**/*.yml",
        "**/*.md",
        "**/*.css",
        "!**/CHANGELOG.md",
        "!**/fixtures/**",
        "!openspec/**",
        "!.changeset/*-*-*.md",
        "!.claude/**",
        "!.cursor/**",
        "!.opencode/**",
        "!**/__snapshots__/**",
        "!**/dist/**",
        "!**/.turbo/**"
      ]
    },
    "//#format:fix": {
      "cache": false,
      "dependsOn": ["@2digits/prettier-config#build"]
    },
    "//#knip": {
      "dependsOn": ["@2digits/eslint-config#build", "@2digits/prettier-config#build"],
      "inputs": [
        ".knip.json",
        "**/package.json",
        "**/*.ts",
        "**/*.tsx",
        "!**/fixtures/**",
        "!**/__snapshots__/**",
        "!**/dist/**",
        "!**/.turbo/**"
      ]
    },
    "lint": {
      "dependsOn": ["topo", "^build"],
      "outputLogs": "new-only"
    },
    "lint:fix": {},
    "//#lint:root:fix": {}
  }
}
